{% extends 'layout.twig' %}

{% block title %}
    Login
{% endblock %}

{% block content %}
    {% if errorMessage is defined %}
        <strong>{{ errorMessage }}</strong>
    {% endif %}

    <!--Login Box-->
    <div class="card"  style="background-color:rgba(135,135,135)">
    <br />
    <div class ="container">
        <div class = "jumbotron col-lg-4 mx-auto">
            <form action="/login/loginAction" method="post">
            <h4 align="Center">Login</h4><br />
                <div class="form-group">
                    <input type = "email" class="form-control" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <input type = "password" class="form-control" placeholder="Enter password">
                </div>
                <button type="submit" class="btn btn-primary form-control">Sign In</button>
            </form>
        </div>
</div>
{% endblock %}